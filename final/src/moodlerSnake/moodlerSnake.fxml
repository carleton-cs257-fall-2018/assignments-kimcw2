<?import javafx.scene.layout.AnchorPane?>
<?import moodlerSnake.GameView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:controller="moodlerSnake.Controller" xmlns:fx="http://javafx.com/fxml">
    <!-- See https://apps.carleton.edu/creativeservices/identity/college_colors/ for official Carleton colors -->
    <top>

        <HBox prefHeight="35" style="-fx-padding: 10px, 5px, 10px, 5px; -fx-background-color: #F3B61D">
            <Label style="-fx-font-size: 140%; -fx-text-fill: white"
                   text="Move left, right, up and down with arrow keys" />
        </HBox>
    </top>

    <center>
        <GameView fx:id="gameView" rowCount="30" columnCount="30"/>
    </center>

</BorderPane>
